@import './header.styl'
@import './hero.styl'
:root
    --softBlue: hsl(231, 69%, 60%)
    --softRed: hsl(0, 94%, 66%)
    --grayishBlue: hsl(229, 8%, 60%)
    --veryDarkBlue: hsl(229, 31%, 21%)

body
    background: #fff;
    font-family: 'Rubik', sans-serif;
    color: var(--veryDarkBlue);
    margin: 0;
    font-size: 18px;

.u-wrapper
    max-width: 1280px;
    margin: auto;
    padding: 0 1em;

.u-h1
    font-size: 2em
    font-weight: 500

.u-p 
    color: var(--grayishBlue)
    line-height: 1.8

.u-button 
    background: var(--softBlue)
    color: white
    padding: 1em 1em
    font-size: .9em
    font-weight: 500
    border-radius: .5em
    margin-left: .5em
    border: none
    box-shadow: 0 5px 10px -5px var(--softBlue)
    cursor: pointer
    &:first-of-type
        margin: 0
    &.is-gray
        background: #f7f7f7
        color: var(--veryDarkBlue)  